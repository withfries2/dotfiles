## Chezmoi Configuration Variables

[data]
# Global defaults assumed for the most common desktop setup (Windows keyboard, 4K display).
keyboard_layout = "Windows"
has_external_display = true
display_resolution = "3840x2160"
# Global environment variables
env = {
  GDK_SCALE = "1.25", # Default scaling factor for HiDPI
}

