# GENERATED BY CHEZMOI - {{ .chezmoi.hostname }}

# --- Terminal Emulation ---
# We comment this out to let the system/Ghostty default to its official terminfo.
# If you run into issues on older remote servers, use the 'px' or 'fix-term' aliases.
# term = xterm-ghostty

# --- Font Configuration ---
# Standardize on Nerd Fonts across all platforms to support Starship/Eza icons
font-family = "JetBrainsMono Nerd Font"
font-style = Regular

# Sizing based on hardware role
font-size = {{ if eq .role "laptop" -}} 11 {{- else -}} 12 {{- end }}

# --- Window ---
window-padding-x = 14
window-padding-y = 14
confirm-close-surface = false
resize-overlay = never

# --- Cursor styling ---
cursor-style = "block"
cursor-style-blink = false
shell-integration-features = no-cursor

# --- Keyboard bindings ---
keybind = f11=toggle_fullscreen
keybind = super+v=paste_from_clipboard
keybind = ctrl+shift+v=paste_from_clipboard

# --- Scrolling ---
mouse-scroll-multiplier = 0.95

# --- Role Specifics ---
# Adjust opacity for focus vs. mobility
{{- if eq .role "laptop" }}
# Better battery/performance/readability for laptop screens
background-opacity = 0.95
{{- else }}
background-opacity = 1.0
{{- end }}
