{{- $role := index . "role" | default "" -}}
{{- $hostname := index .chezmoi "hostname" | default "" -}}
# GENERATED BY CHEZMOI - {{ $hostname }} ({{ $role }})
#
# Control your input devices
# See https://wiki.hypr.land/Configuring/Variables/#input
{{- if or (eq $role "desktop") (eq $role "laptop") }}
input {
  # Default key options
  kb_options = compose:caps,altwin:swap_lalt_lwin
  {{- if eq $hostname "beelink-desktop-omarchy" }}
  # Beelink desktop with Keychron K8 Pro mechanical KB
  kb_options = compose:caps,altwin:swap_lalt_lwin
  {{- else if eq $hostname "lg-gram-omarchy" }}
  # LG Gram laptop keyboard layout specifics
  kb_options = compose:caps,win:super,altwin:swap_alt_win
  {{- else if eq $hostname "red-chromebook-omarchy" }}
  # Samsung Galaxy Chromebook2 with Search->Alt remapping
  kb_options = compose:caps,altwin:ctrl_lwin,lwin:super,caps:alt
  {{- end }}
  repeat_rate = 40
  repeat_delay = 600
  touchpad {
    # Enable natural scroll for all machines with touchpads
    natural_scroll = true
    scroll_factor = 0.4
    disable_while_typing = true
    middle_button_emulation = false
    tap-and-drag = false
    clickfinger_behavior = true
  }
}
# Scroll faster in the terminal
windowrule = scrolltouchpad 1.5, tag:terminal
{{- end }}
