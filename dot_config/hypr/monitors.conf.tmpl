# GENERATED BY CHEZMOI - {{ .chezmoi.hostname }} ({{ .role }})
#
# See https://wiki.hyprland.org/Configuring/Monitors/

{{- if or (eq .role "desktop") (eq .role "laptop") }}

# --- Default Environment ---
env = GDK_SCALE,1
env = XCURSOR_SIZE,24

# --- Role & Host-Specific Overrides ---
{{- if eq .role "laptop" }}
  {{- if eq .chezmoi.hostname "lg-gram-omarchy" }}
  # LG Gram (1080p) - Keep at 1x for sharpness
  monitor = eDP-1, 1920x1080@60, 0x0, 1
  {{- else if eq .chezmoi.hostname "red-chromebook-omarchy" }}
  # Chromebook specifics
  monitor = eDP-1, 1920x1080@60, 0x0, 1
  {{- else }}
  # Generic Laptop Defaults
  monitor = eDP-1, preferred, auto, 1
  {{- end }}

{{- else if eq .role "desktop" }}
  {{- if eq .chezmoi.hostname "beelink-desktop-omarchy" }}
  # Beelink 4K Desktop Scaling
  env = GDK_SCALE,1.25
  env = XCURSOR_SIZE,32
  monitor = , 3840x2160@60, auto, 1.25
  {{- else }}
  # Generic Desktop fallback
  monitor = , preferred, auto, 1
  {{- end }}
{{- end }}

{{- else }}
# Monitor configuration skipped for {{ .role }} role (headless).
{{- end }}
