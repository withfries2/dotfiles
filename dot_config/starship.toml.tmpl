# GENERATED BY CHEZMOI - {{ .chezmoi.hostname }} ({{ .role }})

add_newline = true
command_timeout = 500

# --- Dynamic Prompt Layout ---
{{ if eq .role "server" -}}
# Show User and Host on servers (Green/Red focus)
format = "$username$hostname$directory$git_branch$git_status$character"
{{ else -}}
# Leaner prompt for local desktop/laptop
format = "$directory$git_branch$git_status$character"
{{- end }}

[directory]
truncation_length = 5
style = "bold {{ if eq .role "server" }}yellow{{ else }}blue{{ end }}"

[character]
{{ if eq .role "server" -}}
success_symbol = "[λ](bold green)"
{{ else -}}
success_symbol = "[❯](bold cyan)"
{{- end }}
error_symbol = "[✗](bold red)"

[username]
show_always = true
style_user = "bold green"
format = "[$user]($style)@"

[hostname]
ssh_only = false
style = "bold {{ if eq .role "server" }}red{{ else }}green{{ end }}"
format = "[$hostname]($style) "

# --- Git Configuration ---
[git_branch]
format = "[$symbol$branch]($style) "
style = "italic yellow"
symbol = "󰊢 "

[git_status]
format = '([$all_status$ahead_behind]($style) )'
style = "bold yellow"
ahead = "⇡${count}"
diverged = "⇕⇡${ahead_count}⇣${behind_count}"
behind = "⇣${count}"
untracked = "?"
modified = "!"
staged = "+"
